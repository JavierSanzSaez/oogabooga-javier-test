{
  "preset": "@shelf/jest-mongodb",
  "testEnvironment": "node",
  "testMatch": [
    "**/test/**/*.e2e-spec.ts"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "coverageDirectory": "./coverage",
  "collectCoverageFrom": [
    "src/**/*.{js,ts}",
    "!src/**/*.module.{js,ts}"
  ],
  "globalSetup": "./test/setup.ts",
  "globalTeardown": "./test/teardown.ts",
  "setupFilesAfterEnv": ["<rootDir>/test/setupAfterEnv.ts"]
}